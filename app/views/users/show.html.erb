<div class="row">
        <div class="col s12 m12">
          <div class="card blue">
            <div class="card-content white-text">
              <span class="card-title"><h1>Welcome <%= current_user.first_name %> <%= current_user.last_name %></h1></span>
              <p>Manage you tanks.</p>
            </div>
          </div>
        </div>
      </div>

  <%= button_to "Add Tank", new_user_tank_path(current_user), class: "btn deep-purple darken-1", method: :get %>

  <% if current_user.tanks.empty?  %>

  <% else %>
  <div class="row">
    <% current_user.tanks.each do |tank| %>
      <div class="col s4 m4">
        <div class="card">
          <div class="card-image">
            <img src="/assets/tank5.jpg">
            <span class="card-title"><%= link_to tank.name, user_tank_path(current_user, tank) %></span>
          </div>
          <div class="card-content">
            <p>Gallons: <%= tank.gallons %></p>
            <p>Fish: <%= tank.fish_count %></p>
            <br><br>
          </div>
          <div class="card-action">
            <%= link_to "Add Fish to Tank", new_tank_fish_path(tank) %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <% end %>
